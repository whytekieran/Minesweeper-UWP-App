<Page
    x:Class="MineSweeper.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MineSweeper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"  
                        Margin="0,5,0,0">
                <RadioButton x:ConnectionId='5' x:Name="rbSixGrid" 
                             FontSize="20" 
                             Tag="6" 
                             Content="6 x 6" 
                             Margin="15,0,0,0" 
                             FontFamily="Showcard Gothic" 
                                                     />
                <RadioButton x:ConnectionId='6' x:Name="rbEightGrid" 
                             FontSize="20" 
                             Tag="8" 
                             Content="8 x 8" 
                             FontFamily="Showcard Gothic"
                                                     />
                <RadioButton x:ConnectionId='7' x:Name="rbTenGrid" 
                             FontSize="20" 
                             Tag="10" 
                             Content="10 x 10" 
                             FontFamily="Showcard Gothic"
                                                     />
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:ConnectionId='3' x:Name="txtTimer" TextAlignment="Center" Width="150" Margin="0,0,5,0" Text=""/>
                <TextBlock x:ConnectionId='4' x:Name="txtScore" TextAlignment="Center" Width="150" Margin="0,0,0,0" Text="7549"/>
            </StackPanel>
        </StackPanel>

        <Grid x:ConnectionId='1'  x:Name="contentGrid" 
               Height="470" 
               Width="355" 
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0,20,0,0">
            <Grid.Background>
                <SolidColorBrush x:ConnectionId='2' x:Name="mySolidColorBrush" Color="Gray" />
            </Grid.Background>
        </Grid>

    </Grid>
    <Page.BottomAppBar>
        <AppBar Background="LightGray" IsOpen="false" IsSticky="True">
            <StackPanel Orientation="Horizontal">
                <AppBarButton x:ConnectionId='8' x:Name="Settings" Label="Settings" Icon="Setting"                      />
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>
</Page>

