<Page
    x:Class="MineSweeper.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MineSweeper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock Text="Game Difficulty Settings" 
                           Margin="0, 20, 0, 0"
                           FontSize="30"
                           FontFamily="Showcard Gothic"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 17, 0, 0">
                <TextBlock Text="Choose The Games Difficulty" 
                           Margin="0, 20, 0, 0"
                           FontSize="30"
                           FontFamily="Segoe Marker"/>
            </StackPanel>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Height="360" 
                    Width="300"
                    Margin="0, 50, 0, 0">
            <StackPanel.Background>
                <ImageBrush ImageSource="Images/Minesweeper6.png" />
            </StackPanel.Background>
            <StackPanel Background="{ThemeResource AppBarBackgroundThemeBrush}" 
                        Opacity="0.7" 
                        Height="360">
                <StackPanel 
                    HorizontalAlignment="Center" 
                    Margin="0, 100, 0, 100">
                    <RadioButton x:ConnectionId='1' x:Name="rbEasy" 
                                 Foreground="White" 
                                 FontSize="30" 
                                 Tag="Easy" 
                                 Content="Easy" 
                                 Margin="0, 20, 0, 10"/>
                    <RadioButton x:ConnectionId='2' x:Name="rbMedium" 
                                 Foreground="White" 
                                 FontSize="30" 
                                 Tag="Medium" 
                                 Content="Medium" 
                                 Margin="0, 0, 0, 10"/>
                    <RadioButton x:ConnectionId='3' x:Name="rbHard"  
                                 Foreground="White" 
                                 FontSize="30" 
                                 Tag="Hard" 
                                 Content="Hard" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

