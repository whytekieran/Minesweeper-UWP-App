<Page
    x:Class="MineSweeper.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MineSweeper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--Main Grid-->
    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
        <!--Changes view slightly when rotated-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='1' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='2' x:Name="Portrait6"/>
                <VisualState x:ConnectionId='3' x:Name="Landscape5">
                    <VisualState.Setters>
                        <Setter Target="stackPanel.(FrameworkElement.Height)" Value="88"/>
                        <Setter Target="stackPanel.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>185,0,185,42</Thickness>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="image.(FrameworkElement.Height)" Value="173"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>


        <!--Outputs the Title-->
        <StackPanel x:ConnectionId='4' x:Name="TitlePanel" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top">

            <TextBlock x:ConnectionId='11' x:Name="Title"
                       Margin="0, 20, 0, 0" 
                       TextWrapping="Wrap" 
                       Text="MineSweeper" 
                       FontSize="50" 
                       FontFamily="Showcard Gothic" />
        </StackPanel>

        <!--Outputs the pages Images here-->
        <StackPanel x:ConnectionId='5' x:Name="ImagePanel"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

            <Image x:ConnectionId='10' x:Name="image" Source="Images/Minesweeper7.png" 
                   Height="275" 
                   Width="300" />
        </StackPanel>

        <!--Stackpanel to hold the buttons for Play, Score and Exit-->
        <StackPanel x:ConnectionId='6' x:Name="stackPanel" HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Margin="0, 0, 0, 100" 
                    d:LayoutOverrides="Height, LeftMargin, RightMargin" 
                    RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <CompositeTransform/>
            </StackPanel.RenderTransform>

            <!--Buttons-->
            <Button x:ConnectionId='7' x:Name="btnPlay" 
                    Content="Play" 
                    Width="94" 
                    Margin="0, 0, 15, 0" 
                    Background="White" 
                    BorderBrush="Black" 
                    FontFamily="Stencil"
                                             
                                                   
                                     />

            <Button x:ConnectionId='8' x:Name="btnScores" 
                    Content="Scores" 
                    Width="94"  
                    Margin="0, 0, 15, 0" 
                    Background="White" 
                    BorderBrush="Black" 
                    FontFamily="Stencil"
                                             
                                                   
                                       />

            <Button x:ConnectionId='9' x:Name="btnExit" 
                    Content="Exit" 
                    Width="94" 
                    Background="White" 
                    BorderBrush="Black" 
                    FontFamily="Stencil"
                                             
                                                   
                                     />
        </StackPanel>
    </Grid>
    <!--App bar at the bottom with settings and rules options. Bar can be opened/closed-->
    <Page.BottomAppBar>
        <AppBar Background="LightGray" IsOpen="false" IsSticky="True">
            <StackPanel Orientation="Horizontal">
                <AppBarButton x:ConnectionId='12' x:Name="Settings" Label="Settings" Icon="Setting"                      />
                <AppBarButton x:ConnectionId='13' x:Name="Rules" Label="Game Rules" Icon="Help"                   />
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>
</Page>

